  "paths": {
    "/users": {
      "post":{
        "tags": ["users"],
        "summary": "Create a user",
        "requestBody": {

        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "string"},
                    "name": {"type": "string"},
                    "admin": {"type": "boolean"},
                    "email": {"type": "string"},
                    "created_at": {"type": "string"},
                    "updated_at": {"type": "string"}
                  }
                }
              }
            }
          },
          "500": {
            "description": "User already exists"
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "List all users",
        "responses": {
          "201": {
            "description": "Sucess"
          }
        }
      }
    },
    "/users/:user_id":{
      "get":{
        "tags": ["users"],
        "summary": "List a user especific"
      }
    },
    "/users/:user_id/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "Change user status for Adminitrator"
      }
    }
  }
